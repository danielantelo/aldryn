<div class="product-price">
    {% if price.price1QuantityMax != '' %}
        <span class="eligible-quantity" itemprop="eligibleQuantity" itemscope itemtype="http://schema.org/QuantitativeValue">
            <span itemprop="minValue" content="1"></span>
            <span itemprop="maxValue" content="{{ price.price1QuantityMax }}"></span>
            Hasta {{ price.price1QuantityMax }}:
        </span>
    {% endif %}
    <span class="amount" itemprop="price" content="{{ price.price1 }}">
        {{ price.price1 | number_format(2, ',', '') }}€
        {% if price.price1Unit %}
            <small class="unit">Unidad: {{ price.price1Unit | number_format(3, ',', '') }}€</small>
        {% endif %}
    </span>
    <span itemprop="priceCurrency" content="EUR"></span>
    <link itemprop="availability" href="http://schema.org/InStock">
</div>
