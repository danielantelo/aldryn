{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% block stylesheets %}
        <style>{{ source(app.request.server.get('DOCUMENT_ROOT') ~ asset('build/app.css')) }}</style>
    {% endblock %}
{% endblock %}

{% block body %}
    <div class="printable-order">
        <table>
            <tr>
                <td colspan="2">
                    <img height="70px" src="{{ asset('bundles/app/'~order.web.name~'/logo.png') }}">
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <h1>{{ 'Albarán'|trans }}</h1>
                    <strong>ALB{{ "%10d"|format(order.id) }}</strong><br>
                    Fecha: {{ order.checkoutDate|date("d/m/Y") }}<br>
                    Almacén: Almacén de compra/venta<br>
                </td>
                <td align="right">
                    <strong>{{ order.client.company.name }}</strong><br>
                    CIF: {{ order.client.company.companyId }}<br>
                    {{ order.client.company.formattedAddress|raw }}<br>
                    Tel. {{ order.client.company.telephone }}<br>
                    Fax. {{ order.client.company.fax }}<br>
                </td>
            </tr>
        </table>

        {% include '@App/Web/partial/order.html.twig'  with {
            'order': order,
            'showDelivery': true,
            'summary': true,
            'paymentInstructions': true,
            'showTaxTable': true,
            'showAddresses': true
        } %}
    </div>
{% endblock %}
