{% extends '::base.html.twig' %}

{% block stylesheets %}
<style>
    .printable-order { display: block; width: 800px; margin: 0 auto; page-break-after: always;}
    table { width: 100%; font-size: 13px; }
    th, td { padding: .5rem; border-bottom: 1px solid #eee;}
    th { padding: 5px; border-top: none; line-height: 1.5; font-weight: bold;}
    h1 { margin: 10px 0; }
    .table--tax { width: 35%; display: inline-block; }
</style>
{% endblock %}

{% block body %}
    <div class="printable-order">
        <table class="table">
            <tr>
                <td colspan="2">
                    <img height="70px" src="{{ app.request.uriForPath(asset('bundles/app/'~order.web.name~'/logo.png')) }}">
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <h1>{{ 'Albarán'|trans }}</h1>
                    <br>
                    <br>
                    Almacén de compra/venta<br>
                    {{ order.client.company.name }}<br>
                    CIF: {{ order.client.company.companyId }}<br>
                    {% if order.client.company %}
                        {{ order.client.company.formattedAddress|raw }}<br>
                        {% if order.client.company.telephone %}Tel. {{ order.client.company.telephone }}<br>{% endif %}
                        {% if order.client.company.fax %}Fax. {{ order.client.company.fax }}<br>{% endif %}
                    {% endif %}
                </td>
                <td align="right">
                    <strong>Ref.Pedido: {{ order.basketReference }}</strong><br>
                    Fecha: {{ order.checkoutDate|date("d/m/Y") }}<br>
                    <br>
                    {{ order.paymentContactName }}<br />
                    CIF/NIF: {{ order.clientNationalId }}<br />
                    {{ order.paymentAddressLine1 }}<br />
                    {{ order.paymentAddressLine2 }}<br />
                    {{ order.paymentAddressCity }} {{ order.paymentAddressPostCode }}<br />
                    {{ order.paymentAddressCountry }}
                </td>
            </tr>
        </table>

        {% include '@App/Web/partial/order.html.twig'  with {
            'order': order,
            'showDelivery': true,
            'summary': true,
            'paymentInstructions': true,
            'showTaxTable': true,
            'showAddresses': true,
            'showStockCodes': true
        } %}
    </div>
{% endblock %}
