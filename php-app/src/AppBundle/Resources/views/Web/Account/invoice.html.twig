{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% if inlineStyles|default(false) and includeStyles|default(false) %}
        <style>
            .printable-order {
                display: block;
                width: 900px;
                margin: 0 auto;
                page-break-after: always;
                page-break-before: always;
            }

            .printable-order table {
                width: 100%;
            }

            .printable-order h1 {
                margin: .6rem 0;
            }

            table {
                width: 100%;
                font-size: 0.85rem;
            }

            th,
            td {
                padding: .5rem;
                border-bottom: 1px solid #ddd;
            }

            th {
                padding: .75rem;
                border-top: none;
                line-height: 1.5;
                font-weight: bold;
            }
        </style>
    {% elseif not inlineStyles|default(false)  %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endif %}
{% endblock %}

{% block body %}
    <div class="printable-order">
        <table>
            <tr>
                <td colspan="2">
                    <img height="70px" src="http://{{ order.web.name }}{{ asset('bundles/app/'~order.web.name~'/logo.png') }}">
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <h1>{{ 'Factura'|trans }}</h1>
                    <strong>F{{ order.invoiceNumber }}</strong><br>
                    Fecha: {{ order.checkoutDate|date("d/m/Y") }}<br>
                    <br>
                    {{ order.paymentContactName }}<br />
                    {{ order.paymentAddressLine1 }}<br />
                    {{ order.paymentAddressLine2 }}<br />
                    {{ order.paymentAddressCity }} {{ order.paymentAddressPostCode }}<br />
                    {{ order.paymentAddressCountry }}
                </td>
                <td align="right">
                    <strong>{{ order.client.company.name }}</strong><br>
                    CIF: {{ order.client.company.companyId }}<br>
                    {{ order.client.company.formattedAddress|raw }}<br>
                    Tel. {{ order.client.company.telephone }}<br>
                    Fax. {{ order.client.company.fax }}<br>
                </td>
            </tr>
        </table>

        {% include '@App/Web/partial/order.html.twig'  with {
            'order': order,
            'showDelivery': true,
            'summary': true,
            'paymentInstructions': false,
            'showTaxTable': true,
            'showAddresses': false
        } %}
    </div>
{% endblock %}
