{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% if inlineStyles|default(false) and includeStyles|default(false) %}
        <style>
            .printable-order {
                display: block;
                width: 800px;
                margin: 0 auto;
                page-break-after: always;
                page-break-before: always;
            }

            .printable-order table {
                width: 100%;
            }

            .printable-order h1 {
                margin: .6rem 0;
            }

            table {
                width: 100%;
                font-size: 0.85rem;
            }

            th,
            td {
                padding: .5rem;
                border-bottom: 1px solid #ddd;
            }

            th {
                padding: .75rem;
                border-top: none;
                line-height: 1.5;
                font-weight: bold;
            }
        </style>
    {% elseif not inlineStyles|default(false)  %}
        <style>{{ source(app.request.server.get('DOCUMENT_ROOT') ~ asset('build/' ~ web ~'.css')) }}</style>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="printable-order">
        <table width="100%">
            <tr>
                <td colspan="2">
                    <img height="70px" src="{{ app.request.uriForPath(asset('bundles/app/'~order.web.name~'/logo.png')) }}">
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <h1>{{ 'Factura'|trans }}</h1>
                    <br>
                    <br>
                    Almac√©n de compra/venta<br>
                    {{ order.client.company.name }}<br>
                    CIF: {{ order.client.company.companyId }}<br>
                    {{ order.client.company.formattedAddress|raw }}<br>
                    {% if order.client.company.telephone %}Tel. {{ order.client.company.telephone }}<br>{% endif %}
                    {% if order.client.company.fax %}Fax. {{ order.client.company.fax }}<br>{% endif %}
                </td>
                <td align="right">
                    <strong>No.Factura: {{ order.invoiceNumber }}</strong><br>
                    Fecha: {{ order.invoiceDate|date("d/m/Y") }}<br>
                    Ref.Pedido: {{ order.basketReference }}<br>
                    <br>
                    {{ order.paymentContactName }}<br />
                    CIF/NIF: {{ order.clientNationalId }}<br />
                    {{ order.paymentAddressLine1 }}<br />
                    {{ order.paymentAddressLine2 }}<br />
                    {{ order.paymentAddressCity }} {{ order.paymentAddressPostCode }}<br />
                    {{ order.paymentAddressCountry }}
                </td>
            </tr>
            <tr>
            </tr>
        </table>

        {% include '@App/Web/partial/order.html.twig'  with {
            'order': order,
            'showDelivery': true,
            'summary': true,
            'paymentInstructions': false,
            'showTaxTable': true,
            'showAddresses': false
        } %}
    </div>
{% endblock %}
