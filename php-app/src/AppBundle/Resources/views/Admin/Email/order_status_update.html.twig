{% extends '::base.html.twig' %}

{% block body %}
    <p>
        <img height="70px" src="{{ app.request.uriForPath(asset('bundles/app/'~order.web.name~'/logo.png')) }}">
    </p>
    <p>
        {{ 'Su pedido ha sido actualizado:'|trans }} <br>
        <ul>
            <li>{{ 'Referencia'|trans }}: {{ order.basketReference }}</li>
            <li>{{ 'Fecha de compra'|trans }}: {{ order.checkoutDate|date("d/m/Y") }}</li>
            <li>{{ 'Estado'|trans }}: {{ order.status }}</li>
        </ul>
    </p>
    <p>
        Saludos,<br>
        Equipo {{ order.web.name }}
    </p>
{% endblock %}