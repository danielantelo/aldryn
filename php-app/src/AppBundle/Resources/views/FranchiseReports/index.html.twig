{% extends '::base.html.twig' %}

{% block body %}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
<script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
<script type="text/javascript">
    {{ chart(chartData) }}
</script>
<style>
    body { font-family: arial; font-size: 15px; }
    .report-nav { background: #4c4c4c; width: 100%; margin-bottom: 40px; }
    .report-nav li { display: inline-block; }
    .report-nav li a { display: inline-block; padding: 8px 15px; text-decoration: none; color: white;}
    .report-nav li a:hover, .report-nav li a.selected { background-color: #757575; }
</style>

<h1>Informes de {{ franchise.name }}</h1>
<nav class="report-nav">
    <li>
        <a href="{{ path('franchise-product-sales') }}" class="{% if app.request.get('_route') == 'franchise-product-sales' %}selected{% endif %}">
            {{ 'Ventas de Producto (cantidad)'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('franchise-product-sales-euros') }}" class="{% if app.request.get('_route') == 'franchise-product-sales-euros' %}selected{% endif %}">
            {{ 'Ventas de Producto (€)'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('franchise-category-sales') }}" class="{% if app.request.get('_route') == 'franchise-category-sales' %}selected{% endif %}">
            {{ 'Ventas por Categoría (cantidad)'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('franchise-category-sales-euros') }}" class="{% if app.request.get('_route') == 'franchise-category-sales-euros' %}selected{% endif %}">
            {{ 'Ventas de Categoría (€)'|trans }}
        </a>
    </li>
</nav>

<div id="chartData" style="width: 100%; height: 1000px"></div>
{% endblock %}